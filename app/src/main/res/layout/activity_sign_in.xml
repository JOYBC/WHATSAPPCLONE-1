<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:layout_gravity="center"
    android:orientation="vertical"

    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="45dp"


        app:srcCompat="@drawable/otpbg" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"

        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="9dp" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="9dp" />

    <TextView
        android:id="@+id/tvClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        android:text="Click for Sign Up"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:padding="3dp"/>

    <Button
        android:id="@+id/b1signin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:backgroundTint="@color/whatsAppColor"
        android:text="SIGN IN"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:padding="5dp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/b2_google"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#BFBABA"
            android:drawableLeft="@drawable/ic_google"
            android:padding="5dp"
            android:text="GOOGLE"


            android:textColor="@color/black" />


        <Button
            android:id="@+id/b3_fb"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="28dp"
            android:backgroundTint="#0739BA"
            android:drawableLeft="@drawable/ic_facebook"
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="FACEBOOK" />


    </LinearLayout>

    <Button
        android:id="@+id/signin"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginLeft="29dp"
        android:backgroundTint="@color/whatsAppColor"
        android:text="PHONE VERIFICATION"
        android:textColor="@color/white"


        android:textSize="22dp" />

</LinearLayout>







